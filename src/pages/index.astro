---
import BarControl from "@/components/bar-control";
import Logo from "@/components/logo.astro";
import SeedForm from "@/components/seed-form";
import TokenModules from "@/components/token-modules";
import MainLayout from "@/layouts/main-layout.astro";
---

<MainLayout>
  <main class="flex flex-col gap-8 max-w-6xl mx-4 6xl:mx-auto h-fit">
    <Logo />
    <div class="flex flex-col gap-2">
      <SeedForm client:load />
      <BarControl client:load />
    </div>
    <TokenModules client:load />
  </main>
</MainLayout>
